<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="#000000"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:textSize="32sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create your new account"
        android:textColor="#717171"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/input_text_background_sign_in"
        android:hint="Full Name"
        android:textColorHint="@color/black"
        android:drawablePadding="8dp"
        android:paddingLeft="4dp"
        app:hintTextColor="@color/black"
        android:textCursorDrawable="@null"
        android:lineSpacingExtra="5dp"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/input_text_background_sign_in"
        android:hint="ÙEmail"
        android:textColorHint="@color/black"
        android:drawablePadding="8dp"
        android:paddingLeft="4dp"
        app:hintTextColor="@color/black"
        android:textCursorDrawable="@null"
        android:lineSpacingExtra="5dp"
        android:drawableLeft="@drawable/letter"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/input_text_background_sign_in"
        android:hint="Phone number"
        android:textColorHint="@color/black"
        android:drawablePadding="8dp"
        android:paddingLeft="4dp"
        app:hintTextColor="@color/black"
        android:textCursorDrawable="@null"
        android:lineSpacingExtra="5dp"
        android:drawableLeft="@drawable/phone"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/input_text_background_sign_in"
        android:hint="Password"
        android:textColorHint="@color/black"
        android:drawablePadding="8dp"
        android:paddingLeft="4dp"
        app:hintTextColor="@color/black"
        android:textCursorDrawable="@null"
        android:lineSpacingExtra="5dp"
        android:drawableLeft="@drawable/key"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/password_roles"
        android:layout_marginLeft="16dp"
        android:visibility="gone"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_text_background_sign_in"
        android:hint="confirm Password"
        android:inputType="textPassword"
        android:textColorHint="@color/black"
        android:drawablePadding="8dp"
        android:paddingLeft="4dp"
        app:hintTextColor="@color/black"
        android:textCursorDrawable="@null"
        android:lineSpacingExtra="5dp"
        android:drawableLeft="@drawable/key"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:shadowColor="@color/black"
        android:shadowRadius="15"
        android:shadowDy="2"
        android:shadowDx="2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/sign_in_button_background"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <TextView
            android:id="@+id/you_agree_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#717171"
           android:text="By sigining you agree to our"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/termsOfUse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#2684FC"
            android:text="Terms of Use"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/you_agree_to"
            />
        <TextView
            android:id="@+id/and_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#717171"
            android:text="and"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/termsOfUse"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#2684FC"
            android:text="Terms of Use"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/and_Text"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp">

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/orText"
            android:background="#C4C4C4" />

        <TextView
            android:id="@+id/orText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="or countinue with"
            android:textColor="#717171"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/orText"
            android:background="#C4C4C4" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/centerOfSignIn"
            android:layout_marginRight="24dp"
            android:shadowRadius="15"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            app:cardCornerRadius="10dp"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#1877F2"
                android:textStyle="bold"
                android:text="Facebook"
                android:textColor="#FFFFFF"
                android:drawablePadding="7dp"
                android:padding="14dp"
                android:drawableStart="@drawable/facebook"
                />
        </androidx.cardview.widget.CardView>
        <View
            android:id="@+id/centerOfSignIn"
            android:layout_width="0dp"
            android:layout_centerHorizontal="true"
            android:layout_height="0dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/centerOfSignIn"
            android:layout_marginLeft="24dp"
            app:cardCornerRadius="10dp"
            android:shadowRadius="15"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:textColor="#8A000000"
                android:text="Google"
                android:textStyle="bold"
                android:drawableStart="@drawable/google"
                android:drawablePadding="7dp"
                android:padding="14dp"
                />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        >
        <TextView
            android:id="@+id/noAccountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textColor="#006EB6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/noAccountTextView"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>

