<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TicketFragment.TicketFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/ic_black_back_arrow" />

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginTop="12dp"
                android:textSize="24sp"
                android:layout_marginBottom="24dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/ticket" />
            
            <ImageView
                android:id="@+id/qr_code_img"
                android:layout_width="380dp"
                android:layout_height="319dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/txt"
                android:layout_marginTop="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/qr"/>

            <include
                android:id="@+id/event_de_la"
                layout="@layout/book_detials_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qr_code_img"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />


            <LinearLayout
                android:id="@+id/linear_btns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_below="@+id/event_de_la"
                >

                <Button
                    android:id="@+id/add_to_calendar_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:drawableLeft="@drawable/ic_calendar"
                    android:text="@string/add_to_my_calender"
                    android:textAllCaps="false"
                    android:layout_marginStart="4dp"
                    />
                <Button
                    android:id="@+id/show_location_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_marginStart="20dp"
                    android:drawableLeft="@drawable/map_point"
                    android:drawableTint="@color/white"
                    android:text="@string/show_location"
                    android:textAllCaps="false"

                    />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/particepent_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_btns"
                android:layout_marginTop="16dp"
                tools:listitem="@layout/particepent_li"
                />
            
            <Button
                android:id="@+id/download_ticket_btn"
                android:layout_width="352dp"
                android:layout_height="48dp"
                android:layout_below="@+id/particepent_rv"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_btn"
                android:text="@string/download_ticket"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"

                android:layout_marginBottom="16dp"
                />
        </RelativeLayout>






    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>