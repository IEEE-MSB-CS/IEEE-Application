<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                       

     

    

           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.SignInFragment.SignInFragment" android:tag="layout/fragment_sign_in_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:src="@drawable/singin_pic"
           android:scaleType="centerCrop"
           />
         
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome Back!"
            android:textColor="#000000"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp"
            android:textSize="32sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login back to your account"
            android:textColor="#717171"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            android:textSize="20sp"
            android:textStyle="bold" />


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/input_text_background_sign_in"
            android:hint="Email or phone number"
            android:textColorHint="@color/black"
            android:drawablePadding="8dp"
            android:paddingLeft="4dp"
            app:hintTextColor="@color/black"
            android:textCursorDrawable="@null"
            android:lineSpacingExtra="5dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/input_text_background_sign_in"
            android:hint="Password"
            android:textColorHint="@color/black"
            android:drawablePadding="8dp"
            android:paddingLeft="4dp"
            android:textCursorDrawable="@null"
            android:lineSpacingExtra="5dp"
            app:hintTextColor="@color/black"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:drawableLeft="@drawable/key"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            >
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember Me"
            android:layout_alignParentLeft="true"
            android:textColor="#000000"
            android:buttonTint ="#0E0E0E" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="@string/forgotPassword"/>
        </RelativeLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:shadowColor="@color/black"
            android:shadowRadius="15"
            android:shadowDy="2"
            android:shadowDx="2"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/sign_in_button_background"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp">

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/orText"
                android:background="#C4C4C4" />

            <TextView
                android:id="@+id/orText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="or countinue with"
                android:textColor="#717171"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/orText"
                android:background="#C4C4C4" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/centerOfSignIn"
                android:layout_marginRight="24dp"
                android:shadowRadius="15"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                app:cardCornerRadius="10dp"
                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#1877F2"
                    android:textStyle="bold"
                    android:text="Facebook"
                    android:textColor="#FFFFFF"
                    android:drawablePadding="7dp"
                    android:padding="14dp"
                    android:drawableStart="@drawable/facebook"
                    />
            </androidx.cardview.widget.CardView>
            <View
                android:id="@+id/centerOfSignIn"
                android:layout_width="0dp"
                android:layout_centerHorizontal="true"
                android:layout_height="0dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/centerOfSignIn"
                android:layout_marginLeft="24dp"
                app:cardCornerRadius="10dp"
                android:shadowRadius="15"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:textColor="#8A000000"
                    android:text="Google"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/google"
                    android:drawablePadding="7dp"
                    android:padding="14dp"
                     />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="16dp"
         >
         <TextView
             android:id="@+id/noAccountTextView"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:text="Donâ€™t have an account?"
            app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintLeft_toLeftOf="parent"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Sign up"
             android:textColor="#006EB6"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintLeft_toRightOf="@id/noAccountTextView"
             />

     </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
         